
<div class="container">
    <div class="row">
        <div class="col-sm">
            <p>Keyboard move (a - left, w - up, s - down, d - right )</p>
            <img id="imgelem" src="_content/CanvasAnimateRCL/Green-Cap-Character-16x18.png" />
            <button class="btn btn-primary" @onclick="Animate">Animate</button>
        </div>
        <div class="col-sm">
            <h6>Keyboard commands</h6>
            <p>Move (a - left, w - up, s - down, d - right )</p>
            <p>Actions (k - attack, j - jump attack, b - die)</p>
            <button class="btn btn-primary" @onclick="InitKnight">Initialize Knight</button>
            <button class="btn btn-secondary" @onclick="Reset">Reset</button>
        </div>
        <div class="col-sm">
            <div style="max-height:250px; max-width:350px; overflow:scroll">
                <img id="imageDisplay" src="_content/CanvasAnimateRCL/ActionSheets/DeadBothImg.png" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <hr />
            <canvas id="canvasAnim" style="border: 1px solid black; margin: auto" width="750" height="750"></canvas>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <hr />
            <div style="width: 100%; max-height:300px; overflow:scroll">
                <p>Action log</p>
                <ol style="font-size:.8rem">
                    @foreach (var log in Logs)
                    {
                        <li>
                            <pre>@log</pre>
                        </li>
                    }
                </ol>
            </div>
        </div>
    </div>
</div>





